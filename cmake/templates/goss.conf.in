# Helper file for setting non-default GOSS environment variables

# Common Unix variables
export @OS_LIBRARY_PATH_NAME@=@CMAKE_INSTALL_PREFIX@/@GOSS_LIB_DIR@:$@OS_LIBRARY_PATH_NAME@
export PATH=@CMAKE_INSTALL_PREFIX@/@GOSS_BIN_DIR@:$PATH
export PKG_CONFIG_PATH=@CMAKE_INSTALL_PREFIX@/@GOSS_PKGCONFIG_DIR@:$PKG_CONFIG_PATH
export PYTHONPATH=@CMAKE_INSTALL_PREFIX@/@GOSS_INSTALL_PYTHON_MODULE_DIR@:@CMAKE_INSTALL_PREFIX@/@GOSS_INSTALL_PYTHON_PURE_MODULE_DIR@:$PYTHONPATH
#export MANPATH=@CMAKE_INSTALL_PREFIX@/@GOSS_MAN_DIR@:$MANPATH

# Variable to help find goss-config.cmake
#export GOSS_CMAKE_CONFIG_PATH=@CMAKE_INSTALL_PREFIX@/share/cmake

# Special Mac variables
export DYLD_FRAMEWORK_PATH=/opt/local/Library/Frameworks:$DYLD_FRAMEWORK_PATH

